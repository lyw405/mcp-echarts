{
  "name": "mcp-echarts",
  "description": "❤️ Generate visual charts using Apache ECharts with AI MCP dynamically.",
  "version": "0.1.0",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "prebuild": "rm -rf build/*",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start": "npm run build && npx @modelcontextprotocol/inspector node build/index.js",
    "prepare": "husky && npm run build",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "mcp-echarts": "./build/index.js"
  },
  "files": ["build"],
  "keywords": ["mcp", "echarts", "data-visualization", "chart", "mcp-echarts"],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@napi-rs/canvas": "^0.1.73",
    "echarts": "^5.6.0",
    "zod": "^3.25.16"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@modelcontextprotocol/inspector": "^0.15.0",
    "@types/node": "^22.15.21",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write",
      "biome format --write",
      "biome lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hustcc/mcp-echarts"
  },
  "license": "MIT"
}
